Source: "Bin\Release\dp*.dll"; DestDir: "{app}\bin"; Flags: ignoreversion; Components: Engine
Source: "Bin\Release\jDoom.dll"; DestDir: "{app}\bin"; Flags: ignoreversion; Components: Engine\jDoom
Source: "Bin\Release\jHeretic.dll"; DestDir: "{app}\bin"; Flags: ignoreversion; Components: Engine\jHeretic
